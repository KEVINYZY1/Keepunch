.extra-area{ 
   position:fixed;
   left:0;
   bottom:0;
   width:100%;
   text-align:center;
   margin-bottom:15px;
   font-size:14px;
   color:#999;
}

.check {
  padding: 50rpx 50rpx 50rpx 50rpx;
  width: 100rpx;
  height: 100rpx;
  margin: auto;
  border: none;
  border-radius: 50%;
  box-shadow: 0 0 2px rgba(0,0,0,.12), 0 2px 2px rgba(0,0,0,.2);
}

.btn-area {
    margin: 1.17647059em 15px .3em
}

.btn {
  position: relative;

  padding: 30rpx 30rpx 30rpx 30rpx;
  display: block;

  overflow: hidden;

  border-width: 0;
  outline: none;
  border-radius: 2px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, .6);
  
  background-color: #2ecc71;
  color: #ecf0f1;
  
  transition: background-color 1s;
}

.btn:active {
  background-color: #ff525d;
}

.btn span {
  display: block;
  padding: 12px 24px;
}

image.preview {
  width: 90%;
}

.msg {
    padding-top: 36px;
    text-align: center;
}

.msg__title {
    color:#ff525d;
    margin-bottom:5px;
    font-weight:400;
    font-size:20px;
}

.msg__desc {
    font-size:14px;
    color:#999;
}

.msg__link {
    display:inline;
    color:#586c94;
}

.text-area {
    margin-bottom:25px;
    padding:0 20px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}